<link href="assets/css/c3.min.css" rel="stylesheet" type="text/css">
<script src="https://d3js.org/d3.v3.min.js"></script>
<script src="assets/js/c3.min.js"></script>
<div class="dashboard clearfix">
    <ul class="dashboard-menu">
        <li>
            <a href="#">會員</a>
        </li>
        <li>
            <a href="#">廣告</a>
        </li>
        <li>
            <a href="#" id="chart">成效</a>
        </li>
    </ul>
    <div class="dashboard-content">
        <div id="usercount" display="none"></div>
        <div id="post" display="none"></div>
        <div id="ad" display="none"></div>
    </div>
</div>
<script>
jQuery(document).ready(function ($) {

    $( "#chart" ).toggle();
var totalpost=0;
    function createAdBar(array,adName){
        $('#ad').append('<div id='+adName+'></div>');
        var chart = c3.generate({
            bindto: '#'+adName,
            data: {
                x : 'x',
                columns: [

                ],
                type: 'bar'
            },bar: {
                width: {ratio: 0.2 }
            },axis: {
                x: {
                    type: 'category',
                    }
                }
        });
        console.log(array);
        console.log(array[0].time);
        console.log(array[0].count);
        for(var i=0;i<array.length;i++){
            chart.load({
                columns:[
                    [array[i].time.toString(),array[i].count],
                    ['x',adName]
                ]
            });
        };

    }



    function createBar(array){
        var chart = c3.generate({
            bindto: '#usercount',
            data: {
                x : 'x',
                columns: [

                ],
                type: 'bar'
            },bar: {
                width: {ratio: 0.2 }
            },axis: {
                x: {
                    type: 'category',
                    }
                }
        });
        for(var i=0;i<array.length;i++){
            chart.load({
                columns:[
                    [array[i].time.toString(),array[i].userCount],
                    ['x',"每月新進人數"]
                ]
            });
        };

    }

    function createspline(array){
        var total=0;
        var arr=[];
        var arr1=[];
        var xarr=[];
        arr[0]="累計貼文數"
        arr1[0]="單月貼文數"
        xarr[0]="x"
        var chart = c3.generate({
            bindto: '#post',
             data: {
        x : 'x',
        columns: [

        ],
        type: 'spline'
        },axis: {
                x: {
                    type: 'category',
                    }
                }
        });
        for(var i=0;i<array.length;i++){
            total=total+array[i].postCount;
            arr.push(total);
            arr1.push(array[i].postCount);
            xarr.push(array[i].time.toString());
        };
        chart.load({
            columns:[
                arr,
                arr1,
                xarr
            ],
            axes: {
                累計貼文數: 'y',
                單月貼文數: 'y2'
            },types:{單月貼文數:'bar'},
        });
    }

    firebase.database().ref('statistic').once("value", function (snapshot){
        var array = [];
        snapshot.forEach(function(data){
            var post = {
                    time: data.key,
                    postCount: data.val().postCount,
                    userCount: data.val().userCount,
                };
                array.push(post);
        });
        createBar(array);
        createspline(array);
    });

     firebase.database().ref('adverts').once("value", function (snapshot){
        var array = [];
        snapshot.forEach(function(data){
            var adName= data.key;
            firebase.database().ref('adverts/'+adName+'/clickCount').once("value", function (snapshot){
                snapshot.forEach(function(data){
                    var post = {
                        time: data.key,
                        count: data.val()
                    };
                    array.push(post);
                });
                createAdBar(array,adName);
            });
        });

    });

});

</script>
<script type="text/javascript" src="assets/js/ad.js"></script>
<div id="content" class="content">
	<div class="msg-form">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="newAd_id" class="form-control" rows="1" placeholder="廣告編號"></textarea>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="newAd_name" class="form-control" rows="1" placeholder="廣告名稱"></textarea>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="newAd_sponsorName" class="form-control" rows="1" placeholder="贊助商名稱"></textarea>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="newAd_body" class="form-control" rows="3" placeholder="廣告文宣"></textarea>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="newAd_url" class="form-control" rows="3" placeholder="目標網址"></textarea>
        </div>
        <div class="form-group">
            <input type="file" id="file" accept="image/*">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-picture-o fa-fw" aria-hidden="true"></i></span>
                <input type="text" class="form-control" disabled placeholder="廣告圖片">
                <span class="input-group-btn">
                <button class="btn btn-primary" id="img_input" type="button"><i class="fa fa-search fa-fw" aria-hidden="true"></i>&nbsp;瀏覽</button>
                </span>
            </div>
        </div>
        <div class="form-group">
            <input type="file" id="spfile" accept="image/*">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-picture-o fa-fw" aria-hidden="true"></i></span>
                <input type="text" class="form-control" disabled placeholder="贊助商圖片">
                <span class="input-group-btn">
                <button class="btn btn-primary" id="sp_input" type="button"><i class="fa fa-search fa-fw" aria-hidden="true"></i>&nbsp;瀏覽</button>
                </span>
            </div>
        </div>
        <div id="img_preview"></div>
        <div id="sp_preview"></div>
        <div class="pull-right">
            <button id="clearNewPost" type="button" class="btn btn-default">清除</button>
            <button id="writeNewPost" type="button" class="btn btn-primary">發佈</button>
        </div>
    </div>
    <table width="100%">
    	<thead>
    		<td>廣告名稱</td>
    		<td>點擊次數(總計)</td>
    		<td>贊助商</td>
    		<td></td>
    		<td></td>
    	</thead>
    	<tbody id="list"></tbody>
    </table>
    <div id="adDetail" class="content" hidden>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="ad_title" class="form-control" rows="1" placeholder="廣告標題"></textarea>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="ad_body" class="form-control" rows="1" placeholder="廣告文宣"></textarea>
        </div>
        <div>
            <img src="" id="curAd" width="100%">
            <div class="form-group">
            上傳新圖片<input type="file" id="ad_img_f" accept="image/*">
            </div>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="ad_spon" class="form-control" rows="1" placeholder="廣告商"></textarea>
        </div>
        <div>
            <img src="" id="curSp"/>
            <div class="form-group">
                上傳新圖片<input type="file" id="sp_img_f" accept="image/*">
            </div>
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
            <textarea id="ad_sponurl" class="form-control" rows="1" placeholder="目標網站"></textarea>
            </div>
            <div id="ad_preview"></div>
            <div id="sp_preview"></div>
            <div class="pull-right"><button id="" type="button" class="btn btn-primary" onclick="sendUpdate(event)">發佈</button></div>
    </div>
</div>